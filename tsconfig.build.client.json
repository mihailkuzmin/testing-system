{
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDirs": ["client", "common"],
    "paths": {
      "@common": ["common/index.ts"],
      "@common/*": ["common/*"],
      "@components": ["client/components/index.ts"],
      "@components/*": ["client/components/*"],
      "@api": ["client/api/index.ts"],
      "@api/*": ["client/api/*"],
      "@model": ["client/model/index.ts"],
      "@model/*": ["client/model/*"],
      "@pages": ["client/pages/index.ts"],
      "@pages/*": ["client/pages/*"],
      "@routes": ["client/routes/index.ts"],
      "@routes/*": ["client/routes/*"]
    },
    "outDir": "./dist/client",
    "esModuleInterop": true,
    "module": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "es5",
    "jsx": "react",
    "strict": true,
    "removeComments": true
  },
  "exclude": ["node_modules", "./src/server"]
}