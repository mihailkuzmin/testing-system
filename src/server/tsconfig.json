{
  "compilerOptions": {
    "baseUrl": "../",
    "rootDirs": ["common", "server"],
    "paths": {
      "@common": ["common/index.ts"],
      "@common/*": ["common/*"],
      "@controllers": ["server/controllers/index.ts"],
      "@controllers/*": ["server/controllers/*"],
      "@db": ["server/db/index.ts"],
      "@db/*": ["server/db/*"],
      "@repositories": ["server/repositories/index.ts"],
      "@repositories/*": ["server/repositories/*"],
      "@routes": ["server/routes/index.ts"],
      "@routes/*": ["server/routes/*"],
      "@typings": ["server/typings/index.ts"],
      "@typings/*": ["server/typings/*"]
    },
    "outDir": "../../dist/server",
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "ES2019",
    "lib": ["ES2019"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "removeComments": true
  },
  "exclude": ["node_modules", "client"]
}