{
  "compilerOptions": {
    "baseUrl": "../",
    "rootDirs": ["common", "server"],
    "paths": {
      "@common": ["common/index"],
      "@common/*": ["common/*"],
      "@controllers": ["server/controllers/index"],
      "@controllers/*": ["server/controllers/*"],
      "@db": ["server/db/index"],
      "@db/*": ["server/db/*"],
      "@hooks": ["server/hooks/index"],
      "@hooks/*": ["server/hooks/*"],
      "@repositories": ["server/repositories/index"],
      "@repositories/*": ["server/repositories/*"],
      "@routes": ["server/routes/index"],
      "@routes/*": ["server/routes/*"],
      "@typings": ["server/typings/index"],
      "@typings/*": ["server/typings/*"],
      "@lib": ["server/lib/index"],
      "@lib/*": ["server/lib/*"],
      "@services": ["server/services/index"],
      "@services/*": ["server/services/*"]
    },
    "outDir": "../../dist/backend",
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "ES2019",
    "lib": ["ES2019"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "removeComments": true
  },
  "exclude": ["node_modules", "client"]
}