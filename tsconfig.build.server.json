{
  "compilerOptions": {
    "baseUrl": "./src",
    "rootDirs": ["server", "common"],
    "paths": {
      "@common": ["common/index.ts"],
      "@common/*": ["common/*"]
    },
    "outDir": "./dist/server",
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "ES2019",
    "lib": ["ES2019"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "removeComments": true
  },
  "exclude": ["node_modules", "./src/client"]
}