  "compilerOptions": {
    "target": "ES2017",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "removeComments": true,
    "module": "commonjs",
    "declaration": true,
    "outDir": "./build",
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}